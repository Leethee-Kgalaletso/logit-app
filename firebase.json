{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      ".gitignore",
      ".firebase/*",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/",
        "destination": "/index.html"
      },

      {
        "source": "/login",
        "destination": "/login.html"
      },

      {
        "source": "/signup",
        "destination": "/signup.html"
      }
    ]
  }
}
